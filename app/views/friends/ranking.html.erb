<h1 class="header-id">Contributions</h1>

<div class="float-right btn">
	<span>My Points: <%= @rating.points %></span>
</div>

<table class="table table-hover">
	<% @friends_rating.each do |user| %>
		<thead>
			<th colspan="4">Friends</th>
			<th colspan="4">Points</th>
		</thead>
		<tr>
			<td colspan="4"><%= user.name %></td>
			<td colspan="4"><%= user.points %></td>
		</tr>
	<% end %>
</table>