<h1 class="header-id">My Friends</h1>

<div class="float-right btn">
	<div>
		<%= link_to "Friend Request(#{@count})", friend_requests_path %>
	</div>
	<div>
		<%= link_to "Add Friends", users_path %>
	</div>
</div>

<table class="table table-hover">
  <thead>
  	<th>Friends</th>
  </thead>
	<% @friends.each do |user| %>
		<tr id="friend_list_<%= user.id %>">
			<td colspan="4"><%= user.name %></td>
			<td colspan="4"><%= link_to "Visited Locations", root_path(user_id: user.id) %></td>
			<td colspan="4"><%= link_to "Unfriend", friend_path(user), method: :delete %></td>
		</tr>
	<% end %>
</table>
