<table class="table table-hover">
  <thead>
    <th colspan="10">Friend Requests</th>
  </thead>
  <tbody>
    <% @incoming.each do |user| %>
      <tr id="friend_request_<%= user.id %>">
        <td colspan="8"> <%= user.name %></td>
        <td colspan="10"><%= link_to "Accept", friend_request_path(user), method: :put %></td>
        <td colspan="10"><%= link_to "Reject", friend_request_path(user), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>